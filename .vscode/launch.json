{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: local run",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/usb_isoupdater/main.py",
            "console": "integratedTerminal",
            "args": [
                "."
            ]
        },
        {
            "name": "Python Debugger: local configure",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/usb_isoupdater/main.py",
            "console": "integratedTerminal",
            "args": [
                "--configure",
                "test"
            ]
        },
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        }
    ]
}